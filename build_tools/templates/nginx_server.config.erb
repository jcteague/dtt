upstream yacketyapp_upstream {
  server 127.0.0.1:<%= server_port %>;
  keepalive 64;
}

# redirects the non ssl requests to ssl
server {
  listen        80;
  server_name   <%= server_host %>;
  rewrite       ^ https://$server_name$request_uri? permanent;
}

server {
  listen 443 ssl;
  ssl_certificate <%= certificates_path %>/sslchain.crt;
  ssl_certificate_key <%= certificates_path %>/star_yacketyapp_com.key;
  ssl_protocols        SSLv3 TLSv1;
  ssl_ciphers HIGH:!aNULL:!MD5;

  server_name <%= api_server_name %>;

  location / {
    proxy_pass  https://<%= server_host %>/api/;
  }
}

server {
    listen 80;
    listen 443 ssl;
    ssl_certificate <%= certificates_path %>/sslchain.crt;
    ssl_certificate_key <%= certificates_path %>/star_yacketyapp_com.key;
    ssl_protocols        SSLv3 TLSv1;
    ssl_ciphers HIGH:!aNULL:!MD5;

    server_name <%= server_host %>;

    location / {
      proxy_redirect off;
      proxy_set_header   X-Real-IP            $remote_addr;
      proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
      proxy_set_header   X-Forwarded-Proto $scheme;
      proxy_set_header   Host                   $http_host;
      proxy_set_header   X-NginX-Proxy    true;
      proxy_set_header   Connection "";
      proxy_http_version 1.1;
      proxy_pass         http://yacketyapp_upstream;
    }
}

